@using ProjectManager.Application.ProjectTask.Commands.CreateProjectTask
@model ProjectManager.Application.Project.Commands.EditProject.EditProjectCommand

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1>@Model.Name</h1>

    <h4>Edit project details</h4>
    <hr />
</div>

<div class="row justify-content-center">
    <div class="col-md-8 text-center">

        <form asp-controller="Project" asp-action="UpdateProject">

            <input asp-for="EncodedName" class="form-control" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FinishDate" class="control-label"></label>
                <input asp-for="FinishDate" class="form-control" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-primary m-1" />
                <a asp-action="Index" class="btn btn-secondary m-1">Back to List</a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
