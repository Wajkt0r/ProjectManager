@model ProjectManager.Application.ProjectContributors.Queries.GetContributorRoles.ContributorRolesDto
<form id="editRolesForm" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="ProjectId" value="@Model.ProjectId" />

    <div class="mb-3">
        <label class="form-label fw-bold">Select Roles</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox"
                       class="form-check-input"
                       name="SelectedRoles"
                       id="role_@role.Replace(" ", "_")"
                       value="@role"
                @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label" for="role_@role.Replace(" ", "_")">@role</label>
            </div>
        }
    </div>
</form>
